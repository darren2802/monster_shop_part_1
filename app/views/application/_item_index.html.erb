<h1> My Items </h1>
<hr>
<%= link_to 'Add Item', "/merchants/#{@merchant.id}/items/new" %>
<hr>
<table>
  <thead>
    <th>Item</th>
    <th>Inventory</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
  <% @merchant.items.each do |item|%>
  <tr id="item-<%= item.id %>">
    <td><%= link_to item.name, "/items/#{item.id}"  %> </td>
    <td><%= item.inventory %></td>
    <td>
      <%= button_to 'Deactivate', "/merchant/items/#{item.id}?status=deactivate", method: :patch, class: 'btn btn-danger' if item.active? && current_user.merchant? %>
      <%= button_to 'Activate', "/merchant/items/#{item.id}?status=activate", method: :patch, class: 'btn btn-success' if item.not_active? && current_user.merchant? %>
      <%= button_to 'Deactivate', "/admin/items/#{item.id}?status=deactivate", method: :patch, class: 'btn btn-danger' if item.active? && current_user.admin? %>
      <%= button_to 'Activate', "/admin/items/#{item.id}?status=activate", method: :patch, class: 'btn btn-success' if item.not_active? && current_user.admin? %>
    </td>
    <td><%= link_to "Delete Item", "/items/#{item.id}", method: :delete if item.no_orders? %></td>
    <td><%= link_to "Edit Item", "/items/#{item.id}/edit" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
